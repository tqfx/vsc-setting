{
    /* editor */
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.fontFamily": "'JetBrains Mono', monospace",
    /* explorer */
    "explorer.sortOrderLexicographicOptions": "unicode",
    /* diffEditor */
    "diffEditor.codeLens": true,
    "diffEditor.ignoreTrimWhitespace": false,
    /* files */
    "files.eol": "\n",
    "files.autoGuessEncoding": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    /* workbench */
    "workbench.startupEditor": "none",
    "workbench.enableExperiments": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook",
    },
    /* terminal */
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    /* security */
    "security.workspace.trust.enabled": false,
    /* update */
    "update.mode": "manual",
    "update.showReleaseNotes": false,
    "update.enableWindowsBackgroundUpdates": false,
    /* telemetry */
    "telemetry.telemetryLevel": "off",
    /* extensions */
    "extensions.autoUpdate": false,
    /* git */
    "git.autoStash": true,
    "git.supportCancellation": true,
    "git.enableCommitSigning": true,
    "git.showPushSuccessNotification": true,
    "git.path": "C:/dev/git/cmd/git.exe",
    /* remote */
    "remote.SSH.remotePlatform": {
        "wsl": "linux",
    },
    /* mesonbuild */
    "mesonbuild.configureOnOpen": false,
    /* cmake */
    "cmake.configureOnOpen": false,
    "cmake.format.allowOptionalArgumentIndentation": true,
    /* C_CPP */
    "C_Cpp.intelliSenseEngine": "disabled",
    /* dotnet */
    "dotnetAcquisitionExtension.enableTelemetry": false,
    "dotnetAcquisitionExtension.existingDotnetPath": [
        "C:/Program Files/dotnet",
    ],
    /* clangd */
    "clangd.arguments": [
        "--completion-style=detailed",
        "--header-insertion=never",
        "--clang-tidy",
    ],
    "clangd.fallbackFlags": [
        "-I${env:VCPKG_INSTALLATION_ROOT}/installed/x64-windows/include",
        "-I${env:VCPKG_INSTALLATION_ROOT}/installed/x64-linux/include",
        "-I${cwd}/include",
    ],
    /* doxdocgen */
    "doxdocgen.c.lastLine": "*/",
    "doxdocgen.c.firstLine": "/*!",
    "doxdocgen.c.commentPrefix": " ",
    "doxdocgen.c.triggerSequence": "//",
    "doxdocgen.generic.useGitUserName": true,
    "doxdocgen.generic.useGitUserEmail": true,
    "doxdocgen.generic.commandSuggestion": true,
    /* python */
    "python.analysis.typeCheckingMode": "basic",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "black-formatter.args": [
        "-S",
    ],
    /* cortex-debug */
    "cortex-debug.flattenAnonymous": true,
    "cortex-debug.armToolchainPrefix": "arm-none-eabi",
    "cortex-debug.armToolchainPath": "C:/dev/arm-none-eabi/bin",
    "cortex-debug.openocdPath": "C:/dev/openocd/bin/openocd.exe",
    /* matlab */
    "matlab.mlintpath": "C:/Program Files/MATLAB/R2021b/bin/win64/mlint.exe",
    /* latex-workshop */
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.synctex.gz",
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%",
            ],
        },
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%",
            ],
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%",
            ],
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%",
            ],
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk",
            ],
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": [
                "latexmk_rconly",
            ],
        },
        {
            "name": "latexmk (lualatex)",
            "tools": [
                "lualatexmk",
            ],
        },
        {
            "name": "pdflatex âžž bibtex âžž pdflatexâ€ŠÃ—â€Š2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex",
            ],
        },
        {
            "name": "Compile Rnw files",
            "tools": [
                "rnw2tex",
                "latexmk",
            ],
        },
        {
            "name": "Compile Jnw files",
            "tools": [
                "jnw2tex",
                "latexmk",
            ],
        },
        {
            "name": "tectonic",
            "tools": [
                "tectonic",
            ],
        },
    ],
    /* end */
}